<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erdemyilmaz.yambda.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flw"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:background="@color/WHITE"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="179dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@android:string/dialog_alert_title"
                android:textStyle="bold"
                android:theme="@style/QuestionText" />

            <Button
                android:id="@+id/buttonUI_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:paddingLeft="100dp"
                android:text="A- Keeping a good diet as recommended by your doctor,nurse, and nutritionist"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:theme="@style/CKButton2" />

            <Button
                android:id="@+id/buttonUI_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:paddingLeft="100dp"
                android:text="B-Taking all your medications as prescribed"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:theme="@style/CKButton2" />

            <Button
                android:id="@+id/buttonUI_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:paddingLeft="100dp"
                android:text="C- Monitoring how your surgical site looks"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:theme="@style/CKButton2" />

            <Button
                android:id="@+id/buttonUI_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:paddingLeft="100dp"
                android:text="D- Staying well hydrated and fed"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:theme="@style/CKButton2" />

            <Button
                android:id="@+id/buttonUI_E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:paddingLeft="100dp"
                android:text="E- All of the above"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:theme="@style/CKButton2" />

        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="800dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:paddingLeft="100dp"
            android:text="E- All of the above"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:theme="@style/CKButton2"
            android:visibility="visible" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
